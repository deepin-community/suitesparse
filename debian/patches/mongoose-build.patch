         PROPERTIES OUTPUT_NAME mongoose)
-target_link_libraries(mongoose_exe mongoose_lib)
+target_link_libraries(mongoose_exe mongoose_dylib)
 
 install(TARGETS mongoose_exe
         RUNTIME DESTINATION ${CMAKE_INSTALL_BINDIR})
